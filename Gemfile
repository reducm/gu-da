source 'http://ruby.taobao.org'

gem 'rails', '3.2.2'
gem 'railties'

#数据
gem 'mysql2'
gem 'redis'

#禁用asset日志
gem 'quiet_assets', :git => 'git://github.com/AgilionApps/quiet_assets.git'

#markdown
gem 'redcarpet'
gem 'pygments.rb'

group :assets do
  gem 'sass-rails',   '>= 3.2'
  gem 'coffee-rails', '>= 3.2'
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap-sass-rails'
end

gem 'jquery-rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'rspec'
  gem 'factory_girl_rails'
  gem 'spork', '~>1.0rc'
  gem 'spork-rails'
  gem 'guard'
  gem 'guard-spork'
  gem 'guard-rspec'
  gem 'libnotify'
  gem 'rb-inotify'
  gem 'rb-fsevent'
  gem 'database_cleaner'
end
