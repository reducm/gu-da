source 'http://ruby.taobao.org'

gem 'rails', '3.1.3'

#数据
gem 'mysql2'

#禁用asset日志
gem 'quiet_assets', :git => 'git://github.com/AgilionApps/quiet_assets.git'

group :assets do
  gem 'sass-rails',   '~> 3.1.5'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap-sass'
end

gem 'jquery-rails'

group :development, :test do
    gem 'rspec-rails'
    gem 'rspec'
    gem 'spork'
    gem 'guard'
    gem 'guard-spork'
    gem 'guard-rspec'
    gem 'libnotify'
    gem 'rb-inotify'
    gem 'rb-fsevent'
end
