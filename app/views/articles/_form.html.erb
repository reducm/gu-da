<%= simple_form_for @article  do|f| %> 
  <%= f.input :catagory_id, :collection => @catagories, :prompt => '选择分类', :label => false, :as => :jcatagory %>
  <%= f.input :title, :label => false, :input_html => {:class => 'span8' }  %>
  <%= f.input :content, :label => false, :input_html => {:class => 'span10' }%>
  <%= f.button :submit, '保存', :class => 'btn btn-primary span2' %>
<%end%>
