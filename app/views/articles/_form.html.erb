<div id="articles">
  <div id="article_form">
    <h1><%= title %></h1> 
    <%= simple_form_for @article, :wrapper => :default, :html => {:multipart => true }    do|f| %> 
      <%= f.input :catagory_id, :collection => @catagories, :label => false, :as => :jcatagory, :input_html => {:id => "catagories_select", :class => 'span2'}, :wrapper_html => {style:'display:inline' }   %> 
      <%= f.input :title, :label => false, :input_html => {:class => 'span8' }, :wrapper_html => {style:'display:inline' }%>
      </br><%= link_to "增加分类", "#add_catagory_modal", "data-toggle" => 'modal', "class"=>"little_fontsize"  %> 
      <%= f.input :content, :label => false, :input_html => {:class => 'span10' }%>
      <%= f.button :submit, '保存', :class => 'btn-primary span2', :style => "margin-top:25px"  %>
    <%end%>
  </div> 
</div>

<div class="modal" id="add_catagory_modal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>增加分类</h3>
  </div>
  <div class="modal-body">
    <%= simple_form_for Catagory.new(), :remote => true, :html => {:id => 'catagory_form', "data-type" => 'json', :class => 'form-horizontal' }   do |f| %>
      <%= f.input :user_id, :as => :hidden, :input_html => {:value => @user_id, :autocomplete => 'off'}  %>
      <%= f.input :name, :label => '分类名称', :wrapper_html => {:style=>"float:left;margin-right:10px"}, :input_html => {:id => 'catagory_name_input' } %>
      <%= f.submit '确定', :class => 'btn btn-primary'  %>
    <% end %>
  </div>
</div>



