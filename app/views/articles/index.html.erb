
<div id="articles">
  <div id='create_button_div'>
    <%= (link_to "新建文章", new_article_path, class: 'btn btn-primary') if owner?  %>
  </div>


  <% if @signup_new && owner? %>
    <%= render partial: 'articles/signupnew' %> 
  <%else%>
    <% @articles.each_with_index do|a,i| %>
      <div class='article_each'>
        <h1 class='title_h'><%= link_to a.title, article_path(a.id) %></h1>
        <div class='time'><%= jtime a.created_at %></div>
        <div class='empty_height'> </div>
        <%= markdown(a.preview) %>
        <%= link_to '阅读全文', article_path(a.id), class: "article_link_button" %>  
        <%= (link_to '删除', article_path(a), method: 'delete', class: "article_link_button") if owner?%>  
        <%= (link_to '修改', edit_article_path(a), class: "article_link_button") if owner? %>  
      </div>
      <%unless (i+1) == @articles.size %>
        <div class="articles_hr"></div>
        <div class="empty_height"></div>
        <div class="empty_height"></div>
        <div class="empty_height"></div>
      <%end%>
    <% end %>
  <%end%>
</div>

<% unless new_or_edit? %>
  <div id="switch_sidebar_button">
    <a href="javascript:void(0)"><i class="icon-chevron-right"></i></a>
  </div>
<%end%>

