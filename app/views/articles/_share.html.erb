<%= javascript_include_tag "share" %>
<div class="modal hide" id="ShareModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3><%= title%></h3>
  </div>
  <div class="modal-body">
    <%= form_tag share_authentications_path do%>
      <% authentications.each do |a|%>
        <%= a.nickname %>
        <%= a.provider %>
        <%= image_tag a.image%>
        <%= check_box_tag 'providers[]',a.provider, true%>
      <%end%>
      <%= hidden_field_tag 'article', article.id %>
      <%= submit_tag "确定"%>
    <%end%>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>
