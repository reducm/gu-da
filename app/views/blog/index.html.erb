<div id="login">
  <div id="login_left">

  </div>

  <div id="login_right">
    <%= simple_form_for @user, :url => login_path, :html => { :id => 'login_form' }, :wrapper => :default   do|f|%>
      <%= f.input :name, :label => false, :placeholder => '输入用户名或者邮箱'  %> 
      <%= f.input :password, :label => false, :wrapper_html => {id:'input_password_div'}, :placeholder => '输入密码'   %> 
      <%= f.button :submit, "登录", :class => 'btn-primary', :style => 'margin-left:17px;width:76px;' %>
      <%= f.input :remember_me, :as => :boolean, :label => '记住我', :label_html => {style:'color:grey'}, :wrapper_html => {id:'input_rememberme_div'} %>
    <%end%>

  </div>
</div>

<%= flash[:notice] %>


