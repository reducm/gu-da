<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title_helper %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "pnotify" %>
    <%= javascript_include_tag "article" %>
    <%= yield :other_js %>
    <%= csrf_meta_tags %>
    <link rel="icon" href="/favicon.png" type="image/png"/>
  </head>
  <body>

    <%= render partial: 'layouts/nav' %> 

    <div id="flash"><%= flash_message %></div>

    <div class="container row container_trans" id="container">

      <div id="article" <%= raw article_width_height %>>
        <%= yield %> 
      </div>

      <div id="preview">
        <%= yield :preview %> 
      </div>
      <%= render partial: 'articles/sidebar', locals: {user: @current_user } %>

      <%= yield :comment %>
    </div>
    <% unless new_or_edit? %>
      <%= render partial: 'layouts/foot' %>
    <%end%>
    <br/ >
    <%= content_tag :div, id:'guda', data:{
      guda: {
        user_id:@user_id || 0, 
        user_head: (@user ? show_user_head(@user,80) : show_user_head() ),
        user_name:@user_name || 'DemoUser', 
        article_id: @article.try(:id) || nil,
        action:params[:action], 
        controller:params[:controller], 
        controllers:[], 
        isLogined: logined?
      }
      } do %>
    <% end%>
  </body>
</html>
