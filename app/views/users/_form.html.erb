<%= flash[:notice] %>
<%= simple_form_for @user, :defaults=>{:input_html=>{:class => 'span3'}} do |f|%> 
  <%= f.input :name, :label => '用户名', :input_html => {:maxlength => 20 } %>
  <%= f.input :email, :placeholder => 'example@email.com' %>

  <% if action == 'edit' %> 
    <%= f.input :password, :label => '旧密码' %>
    <%= f.input :password_new, :hint => false, :error_html => { :id => 'password_error' }, :label=>'新密码' %>
    <%= f.input :password_confirm, :label=>'新密码确认' %>
  <% else%>
    <%= f.input :password, :hint => false, :error_html => { :id => 'password_error' }, :label=>'密码' %>
    <%= f.input :password_confirm, :label=>'确认密码' %>
  <% end %>
  
  <%= f.input :birthday, :label=>'生日' %>
  <%= f.button :submit %>
<% end %>
