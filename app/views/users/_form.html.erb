<%= simple_form_for @user do |f|%> 
  <%= f.input :name, :label => '用户名', :input_html => {:maxlength => 20 } %>
  <%= f.input :email, :placeholder => 'example@email.com' %>
  <%= f.input :password, :hint => false, :error_html => { :id => 'password_error' }   %>
  <%= f.input :birthday%>
  <%= f.button :submit %>
<% end %>
